@model Services

@{
    ViewData["Title"] = "AddService";
}

<h2>Add Services</h2>
<form action="~/Admin/SaveSer" method="POST">
     <div class="form-group">
         <label>Service Title</label>
         <input asp-for="@Model.ServiceSysId" type="hidden" />
         <input asp-for="@Model.ServiceTitle" type="text" class="form-control" />
     </div>
     <button type="submit" class="btn btn-primary">Save</button>
</form>